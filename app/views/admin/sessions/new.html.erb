<div class="container-fluid">
  <h3 class="m-4"><span class="admin_heading text-nowrap">管理者ログイン</span></h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mb-3">
      <div class="col-md-3"><%= f.label :name %></div>
      <div class="col-md-9"><%= f.text_field :name, size: 30, autofocus: true %></div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3"><%= f.label :email %></div>
      <div class="col-md-9"><%= f.text_field :email, size: 30 %></div>
    </div>

    <div class="row">
      <div class="col-md-3"><%= f.label :password %></div>
      <div class="col-md-9"><%= f.password_field :password, size: 30 %></div>
    </div>

    <div class="actions m-5">
      <div class="row">
        <div class="mx-auto"><%= f.submit "管理者ログイン", class: "btn btn-success" %></div>
      </div>
    </div>
  <% end %>
</div>



