<h3>新規商品登録</h3>

<%= form_with model: @item,url: admin_items_path, local:true do |f| %>

<h5>商品名</h5>
<%= f.text_field :name, autofocus: true %>

<h5>商品画像</h5>
<%= f.attachment_field :image %>

<h5>税込価格</h5>
<%= f.text_field :price %>

<h5>説明</h5>
<%= f.text_field :description %>

<div class="mt-3">
<%= f.button '商品を追加', class: "btn btn-success" %>
</div>

<% end %>