<div class="container-fluid">
 <h3 class="m-4"><span class="admin_heading">商品情報</span></h3>
 <div class="row justify-content-center m-3">
  <div class="col-sm-10" style="max-height: 500px;">
   <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg', class: "img-fluid w-100 h-100" %>
  </div>
 </div>
  <div class="row justify-content-center">
    <div class="col-sm-10">
     <div class="table-responsive">
      <table class="table table-bordered">
       <tr>
        <th class="w-25">商品名</th>
        <td class="w-75"><%= @item.name %></td>
       </tr>
       <tr>
        <th>商品説明</th>
        <td><span class="text-wrap"><%= @item.description %></span></td>
       </tr>
       <tr>
        <th>値段</th>
        <td><%= @item.price %>円(税込)</td>
       </tr>
      </table>
     </div>
    </div>
  </div>

  <div class="row justify-content-center my-4">
    <div class="col-md-4"><%= link_to "削除する", admin_item_path(@item), class: "btn btn-danger w-100" %></div>
  </div>

</div>