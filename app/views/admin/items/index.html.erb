<h3>商品一覧</h3>

<table class="table">
  <thead>
    <tr>
      <th>商品画像</th>
      <th>商品名</th>
      <th>税込価格</th>
      <th>商品説明</th>
      <th>
        <%= link_to new_admin_item_path do %>
          <i class="far fa-plus-square fa-2x"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |i| %>
      <tr>
        <td><%= attachment_image_tag i, :image, :fill, 100, 100, format: 'jpeg'%></td>
        <td><%= i.name %></td>
        <td><%= i.price %></td>
        <td><%= i.description %></td>
        <td><%= link_to "削除する", admin_item_path(i.id), class: "btn btn-danger", method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

