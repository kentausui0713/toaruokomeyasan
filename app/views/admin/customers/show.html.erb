<div class="container">
  <h3 class="m-4"><span class="admin_heading">会員情報</span></h3>

  <div class="row mb-3">
    <div class="col-md-3">お名前</div>
    <div class="col-md-9"><%= @customer.name %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">お名前(カナ)</div>
    <div class="col-md-9"><%= @customer.name_kana %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">電話番号</div>
    <div class="col-md-9"><%= @customer.phone_num %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">住所</div>
    <div class="col-md-9"><%= @customer.address %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">郵便番号</div>
    <div class="col-md-9"><%= @customer.postal_code %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">メールアドレス</div>
    <div class="col-md-9"><%= @customer.email %></div>
  </div>

  <!--以下ボタン-->
  <div class="row justify-content-center my-4">
    <div class="col-md-4"><%= link_to '注文履歴を見る', admin_orders_path(customer_id: @customer.id), class: "btn btn-primary w-100" %></div>
  </div>

  <div class="row justify-content-center">
    <% if @customer.is_deleted == false %>
      <div class="col-md-4"><%= link_to "退会させる", withdraw_admin_customers_path(email: @customer.email), method: :patch, class: "btn btn-danger w-100" %></div>
    <% else %>
      <div class="col-md-4"><%= link_to "戻す", withdraw_admin_customers_path(email: @customer.email), method: :patch, class: "btn btn-success w-100" %></div>
    <% end %>
  </div>

</div>
