<div class="container-fluid">
  <h3 class="m-4"><span class="heading">新規登録</span></h3>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row mb-3">
      <div class="col-md-3"><%= f.label :name %></div>
      <div class="col-md-9"><%= f.text_field :name, size: 30, autofocus: true %></div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3"><%= f.label :name_kana %></div>
      <div class="col-md-9"><%= f.text_field :name_kana, size: 30 %></div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3"><%= f.label :phone_num %></div>
      <div class="col-md-9"><%= f.text_field :phone_num, size: 30 %></div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3"><%= f.label :address %></div>
      <div class="col-md-9"><%= f.text_field :address, size: 30 %></div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3"><%= f.label :postal_code %>(7ケタ数字)</div>
      <div class="col-md-9"><%= f.text_field :postal_code, size: 30 %></div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3"><%= f.label :email %></div>
      <div class="col-md-9"><%= f.text_field :email, autocomplete: "email", size: 30 %></div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
      </div>
      <div class="col-md-9"><%= f.password_field :password, autocomplete: "new-password", size: 30 %></div>
    </div>

    <div class="row">
      <div class="col-md-3"><%= f.label :password_confirmation %></div>
      <div class="col-md-9"><%= f.password_field :password_confirmation, autocomplete: "new-password", size: 30 %></div>
    </div>

    <div class="actions m-5">
      <div class="row">
        <div class="mx-auto"><%= f.submit "新規登録する", class: "btn btn-success" %></div>
      </div>
    </div>
  <% end %>
</div>

